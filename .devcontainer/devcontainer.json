{
    "name": "bandit",
    "dockerFile": "Dockerfile",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python"
            ],
            "mounts": [
                "source=.,target=/workspace,type=bind,consistency=cached"
            ],
            "env": {
                "PYTHONPATH": "/home/astrfo"
            }
        }
    },
    "postCreateCommand": "pip install -r requirements.txt",
    "remoteUser": "vscode"
}